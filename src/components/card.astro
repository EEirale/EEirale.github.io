---
export interface Props {
    title: string;
    role: string;
    href: string;
    img: string;
    hours: string;
    classe: string;

}

const { href, title, role, img, hours, classe } = Astro.props;
---

<div class="dynamic">
    <div>
        <a href={href}>
            <img class="image" src={img} alt="Logo" />
            <div>
                <h2>
                    {title}
                    <span>&rarr;</span>
                    {role}
                </h2>
            </div>
            <table>
                    <tr>
                        <td>Ore: </td>
                        <td>{hours}</td>
                        <td>Classe:</td>
                        <td>{classe}</td>
                    </tr>
            </table>
        </a>
    </div>
</div>

<style>
    @import "https://fonts.googleapis.com/css2?family=Raleway";
    .dynamic {
        width: 75%;
        margin: 20px 0px;
        height: 300px;

        cursor: pointer;

        align-items: center;
        padding: auto;
        transform: perspective(75em) rotateX(30deg);
        box-shadow:
            rgba(22, 31, 39, 0.42) 0px 60px 123px -25px,
            rgba(19, 26, 32, 0.08) 0px 35px 75px -35px;
        border-radius: 10px;
        border: 1px solid;
        border-color: rgb(213, 220, 226) rgb(213, 220, 226) rgb(184, 194, 204);
        transition-duration: 1.5s;
        &:hover{
            transform: perspective(800px) rotateY(-4deg);
            transform: scale(1.1);
        }
    }
    div {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .image {
        max-height: 250px;
        max-width: inherit;
        align-self: center;
        
        margin-top: -50px;
        z-index: 3;
        transition-duration: 1s;
    }

    a {
        margin: 0 auto;
        font-family: Raleway;
        text-align: center;
        color: black;
        text-decoration: none;
    }

    table{
        width: 100%;
    }
    td{
        width: 25%;
    }

</style>
