---
export interface Props {
    img: string;
    logo: string;
    name: string;
    org: string;
    years: string;
    section: string;
    href: string;
}

const { href, name, img, org, section, years, logo } = Astro.props;
---

<div class="container">
    <img class="img" src={img} />
    <div class="box">
        <div id="info">
        <div>
            <h2 class="school-name">{name}</h2>
            <a href={href}><h3 class="organisation">{org}</h3></a>
            <div class="inline">
                <span>{section}</span>
                <span>{years}</span>
            </div>
        </div>
    </div>
        <img class="logo" src={logo} />
    </div>
</div>

<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;

        width: 75%;
        margin: 20px 0px;
        max-height: 550px;

        
        padding: auto;
        box-shadow:
            rgba(22, 31, 39, 0.42) 0px 60px 123px -25px,
            rgba(19, 26, 32, 0.08) 0px 35px 75px -35px;
        border-radius: 10px;
        border: 1px solid;
        border-color: rgb(213, 220, 226) rgb(213, 220, 226) rgb(184, 194, 204);

        transition: all 1s;

        &:hover {
            width: 80%;
        }
    }

    h2 {
        font-size: 2rem;
    }

    h3 {
        font-size: 1.5rem;
    }

    .img {
        width: 100%;
        height: 300px;
        object-fit: cover; object-position: -20% 45%;
    }

    .inline {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 30px;
        width: 75%;
    }

    #info {
        padding-left: 30px;
        display: flex;
        width: 100%;
        flex-direction: column;

        font-size: 1.25rem;
    }

    .logo {
        max-height: 250px;
    }

    .box {
        display: flex;
        width: 100%;
    }
</style>