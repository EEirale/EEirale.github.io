---
export interface Props {
    short: string;
    name: string;
    href: string;
    img: string;
    issuer: string;
    score: string;
    level: string;
    dates: string;
}

const { href, short, name, img, issuer, score, level, dates } = Astro.props;
---

<div class="container">
    <img src={img} />
    <div class="pad">
        <div id="title">
            <h2 class="short">{short}</h2>
            <h2 class="name">{name}</h2>
        </div>
        <div class="inline">
            <span>Emittente:</span> 
            <a href={href}>{issuer}</a>
        </div>
        <div class="inline">
            <spam>Score: {score}</spam>
            <span>{level}</span>
        </div>
        <div class="inline">
            <span>Validit√†:</span>
            <span>{dates}</span>
        </div>
    </div>
</div>

<style>
    .container {
        display: flex;
        align-items: center;
        justify-content: center;

        width: 65%;
        margin: 20px 0px;
        max-height: 350px;

        
        padding: auto;
        box-shadow:
            rgba(22, 31, 39, 0.42) 0px 60px 123px -25px,
            rgba(19, 26, 32, 0.08) 0px 35px 75px -35px;
        border-radius: 10px;
        border: 1px solid;
        border-color: rgb(213, 220, 226) rgb(213, 220, 226) rgb(184, 194, 204);

        transition: all 1s;

        &:hover {
            width: 75%;
            #title{
                width: 75%;

                .short {
                    opacity: 0;
                    transform: translateX(-500px);
                }
                .name {
                    opacity: 1;
                    transform: translateX(-45px);
                }
            }
        }
    }

    .pad {
        margin-left: 15px;
        width: 75%;
    }

    img {
        max-height: 250px;
        max-width: 25%;
    }

    #title {
        display: flex;
        justify-content: space-between;
        align-items: center;

        width: 65%;

        overflow: hidden;
        white-space: nowrap;
        cursor: pointer;

        transition: all 1s;

        .short {
            font-size: 2rem;

            opacity: 1;
            transform: translateX(45px);
            transition:
                opacity 0.5s 2s,
                transform 0.5s 0.5s;
        }
        .name {
            font-size: 2rem;

            opacity: 0;
            transform: translateX(500px);
            transition:
                opacity 0.5s 1s,
                transform 0.5s 1s;
        }
    }

    .inline {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 30px;
        width: 50%;
    }
</style>
