<style>
	#presentaion-container {
		display: flex;
		background-image: url("../images/galaxy-background.jpg");
		background-image: cross-fade();
		height: calc(100vh - 100px);
		/* margin-top: -35px; */
		align-items: center;
		justify-content: center;
		flex-direction: column;
	}

	h1 {
		text-align: center;
		font-family: Zen Dots;
		font-size: 4rem;
		color: #fff;
	}

	#motto-container {
		display: inline-flex;
		justify-content: space-evenly;
		align-content: center;

		width: 100%;
	}
	#motto-container > span {
		text-align: center;
		font-family: Zen Dots;
		font-size: 2rem;
		color: #fff;
	}

	#greeting-container {
		margin-top: 25px;
	}

	p {
		font-family: Raleway;
		max-width: 100ch;
		padding: 5px 10px;
		color: #fff;
		text-align: center;
		font-size: 1.5rem;
	}

	a {
		color: #fff;
	}
</style>
